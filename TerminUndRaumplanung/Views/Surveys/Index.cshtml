@model IEnumerable<AppData.Models.Survey>

@{
    ViewData["Title"] = "Index";
}

<!-- Erstellt durch Marco Geisthoff -->
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Subject)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator.FirstName)
                </td>
                <td>
                    @*Insert some javascript code, that displays only the first x charakters
                        of all members seperated by a "," and if you click at the field, it
                        should expand to display all members*@
                    @Html.DisplayFor(modelItem => item.Members)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>