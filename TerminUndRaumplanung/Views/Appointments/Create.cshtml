@model AppData.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<!-- Erstellt durch Heribert Stempfhuber -->
<h2>Create</h2>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Survey.Id)

            <div class="editor-lable">
                @Html.LabelFor(model => model.StartTime)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.StartTime)
                @Html.ValidationMessageFor(model => model.StartTime)
            </div>

            <div class="editor-lable">
                @Html.LabelFor(model => model.EndTime)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.EndTime)
                @Html.ValidationMessageFor(model => model.EndTime)
            </div>

            <div class="editor-lable">
                @Html.LabelFor(model => model.Room)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.SelectedRoom, new SelectList(ViewBag.RoomList, "Id", "Name"), "Select one", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedRoom)
            </div>

            <div class="editor-lable">
                @Html.LabelFor(model => model.Ressources)
            </div>
            <div class="editor-field">
                @Html.ListBoxFor(model => model.SelectedRessource, new MultiSelectList(Model.Ressources, "Id", "Name"))
                @Html.ValidationMessageFor(model => model.SelectedRessource)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
