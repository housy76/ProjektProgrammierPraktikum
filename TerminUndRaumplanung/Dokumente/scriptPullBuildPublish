#!/bin/bash

echo pulling git repository...
git pull
echo building Project...
sudo dotnet build
echo publishing Project...
sudo dotnet publish
echo stopping service supervisor...
sudo service supervisor stop
echo copying published files to /var/netcore/myapp/ ...
sudo cp -ruv ./bin/Debug/netcoreapp2.0/publish/* /var/netcore/myapp/
echo starting service supervisor...
sudo service supervisor start
echo displaying supervisor status...
sudo service supervisor status
